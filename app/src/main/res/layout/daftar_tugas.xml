<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/gambar_tgs"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/jaringan"


                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txtnmkls"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jaringan Komputer Kelas MM XII"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/txtdesk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kerjakan Soal ini. Perhatikan waktu batas pengumpulan"
                        android:textSize="10sp"/>
                    <LinearLayout
                        android:id="@+id/linemasih"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="3"
                        android:gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtwaktu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="23:59"
                            android:textColor="#EB047810"
                            android:textStyle="bold"
                            android:textSize="10sp"/>
                        <TextView
                            android:id="@+id/txttgl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="25 Januari 2023"
                            android:textStyle="bold"
                            android:textColor="#EB047810"
                            android:textSize="10sp"/>
                        <ImageView
                            android:id="@+id/verify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_verified"/>
                    </LinearLayout>





                </LinearLayout>



            </LinearLayout>



    </LinearLayout>



</androidx.cardview.widget.CardView>