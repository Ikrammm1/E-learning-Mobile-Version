<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CariFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">

                <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="10dp">

                <SearchView
                    android:id="@+id/edCari"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:queryHint="Cari Kelas..."
                    android:iconifiedByDefault="false"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/search"/>


            </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Search"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="20dp" >

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:backgroundTint="#CECFD1"
                        app:cardCornerRadius="10dp"
                        android:padding="5dp"
                        android:layout_marginEnd="10dp">
                        <TextView
                            android:id="@+id/bindo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bahasa Indonesia"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_margin="10dp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:backgroundTint="#CECFD1"
                        app:cardCornerRadius="10dp"
                        android:padding="5dp"
                        android:layout_marginEnd="10dp">
                        <TextView
                            android:id="@+id/mtk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Matematika"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_margin="10dp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:backgroundTint="#CECFD1"
                        app:cardCornerRadius="10dp"
                        android:padding="5dp"
                        android:layout_marginEnd="10dp">
                        <TextView
                            android:id="@+id/kimia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kimia"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_margin="10dp" />

                    </androidx.cardview.widget.CardView>



                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jurusan"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:id="@+id/btntkr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="140dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="5dp"
                                app:cardPreventCornerOverlap="true"
                                >




                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="140dp"
                                    android:src="@drawable/tkro"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/grad_jur">

                                </LinearLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TKR - Otomotif"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:layout_marginTop="20dp"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    />



                            </androidx.cardview.widget.CardView>


                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/btnmm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="140dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="5dp"
                                app:cardPreventCornerOverlap="true"
                                >




                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="140dp"
                                    android:src="@drawable/multimedia"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/grad_jur">

                                </LinearLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Multimedia"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:layout_marginTop="20dp"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    />



                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:id="@+id/btnatp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="140dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="5dp"
                                app:cardPreventCornerOverlap="true"
                                >




                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="140dp"
                                    android:src="@drawable/atp"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/grad_jur">

                                </LinearLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ATP"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:layout_marginTop="20dp"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    />



                            </androidx.cardview.widget.CardView>


                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/btnatph"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="140dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="5dp"
                                app:cardPreventCornerOverlap="true"
                                >




                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="140dp"
                                    android:src="@drawable/atph"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/grad_jur">

                                </LinearLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ATPH"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:layout_marginTop="20dp"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    />



                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>


</FrameLayout>